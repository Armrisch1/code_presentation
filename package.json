{
  "name": "hayerenik-api",
  "private": true,
  "version": "1.0.0",
  "description": "nest js api for hayerenik",
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migrate": "yarn build && npx sequelize-cli db:migrate",
    "migrate:seed": "yarn build && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all",
    "migration:create": "npx sequelize-cli migration:create --migrations-path src/database/migrations --name ",
    "migration:run": "yarn build && npx sequelize-cli db:migrate",
    "migration:undo": "yarn build && npx sequelize-cli db:migrate:undo",
    "migration:undo:all": "yarn build && npx sequelize-cli db:migrate:undo:all",
    "seed:create": "npx sequelize-cli seed:generate --seeders-path src/database/seeders --name ",
    "seed:run": "yarn build && npx sequelize-cli db:seed:all",
    "seed:undo": "yarn build && npx sequelize-cli db:seed:undo",
    "seed:undo:all": "yarn build && npx sequelize-cli db:seed:undo:all"
  },
  "dependencies": {
    "@nestjs/axios": "^2.0.0",
    "@nestjs/cache-manager": "^2.2.2",
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.5",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/serve-static": "^4.0.0",
    "@nestjs/swagger": "^6.3.0",
    "@types/multer": "^1.4.11",
    "axios": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "cache-manager": "^5.4.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cls-hooked": "^4.2.2",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.3",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.5",
    "sequelize": "^6.33.0",
    "sequelize-typescript": "^2.1.5",
    "stripe": "^14.23.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.3.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.3",
    "@types/sequelize": "^4.28.17",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.2",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.8.2",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
